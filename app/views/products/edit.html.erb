<h2> Edit picture <%= @product.id %> </h2>
<%= form_for @product do |f| %>
  <div class="field">
    <p><%= f.label :name %></p>
    <p><%= f.text_field :name %></p>
  </div>

  <div class="field">
    <p><%= f.label :image %></p>
    <p><%= f.text_field :image %></p>
  </div>


  <div class="field">
    <p><%= f.label :discription %></p>
    <p><%= f.text_field :discription %></p>
  </div>

  <div class="field">
    <p><%= f.label :price %></p>
    <p><%= f.text_field :price %></p>
  </div>

  <div class="field">
    <p><%= f.submit  %></p>
  </div>
<% end %>
